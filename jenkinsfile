#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
        timestamps()
    }
    stages {
        stage("Create and push docker image") {
            steps {
                echo "======== building image ========"
                sh 'docker build -t kolyavolkov/myrestapi:1.0.0 . '
                echo "======== pushing image to dockerhub ========"
                sh 'docker push kolyavolkov/myrestapi:1.0.0'
            }

        }
    }
}
